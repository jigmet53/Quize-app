<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quize_ques"
    android:padding="16dp"
    android:background="@color/colorBackground">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_score"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/h"
        android:textColor="@android:color/black"
        android:text="Score: 0"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_qc"
        android:text="Question: 1/x"
        android:textColor="@android:color/black"
        android:layout_below="@+id/t_score"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_c"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:text="00:30"
        android:layout_below="@+id/h"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here will q"
        android:textSize="20sp"
        android:id="@+id/tv"
        android:layout_above="@+id/r_g"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        />

    <RadioGroup
        android:id="@+id/r_g"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r1"
            android:text="Option 1"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r2"
            android:text="Option 2"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r3"
            android:text="Option 3"
            />

    </RadioGroup>



    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s"
        android:text="Next"
        android:onClick="click"
        android:layout_below="@+id/n"
        android:layout_marginTop="16dp"
        tools:ignore="OnClick" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/n"
        android:text="Next"
        android:onClick="click"
        android:layout_below="@+id/r_g"
        android:layout_marginTop="16dp"
        tools:ignore="OnClick" />


    <LinearLayout
        android:id="@+id/h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#AFA7EF"
        android:layout_below="@+id/s"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Jigmet Rinchen"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:background="#6AED83"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="11811334"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>