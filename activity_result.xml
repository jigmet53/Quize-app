<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rr3"
    tools:context=".result"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#AFA7EF"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Jigmet Rinchen"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toast_layout_root"
        android:layout_width="fill_parent"
        android:layout_height="300dp"


        android:background="@drawable/ri1"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="8dp">
        <!-- ImageVView and TextView for custom Toast -->
        <ImageView
            android:id="@+id/toastImageView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginRight="8dp"
           />

        <TextView
            android:id="@+id/toastTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total="
            android:layout_marginTop="20dp"
            android:textSize="40dp"
            android:layout_marginLeft="100dp"
            android:textColor="#FFF" />
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6AED83"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:text="11811334"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="Rate us"
        android:id="@+id/b"
        android:layout_below="@+id/toast_layout_root"
        android:layout_marginTop="70dp"

        android:onClick="rate"
        android:textColor="@color/colorPrimaryDark"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New"
        android:onClick="neww"
        android:layout_below="@+id/b"
        android:layout_marginTop="30dp"
        android:id="@+id/b1"

        />
</RelativeLayout>